// This is your Prisma schema file,
// learn more about it in the docs: https://pris.ly/d/prisma-schema

generator client {
  provider      = "prisma-client-js"
  binaryTargets = ["native", "linux-musl"]
}

datasource db {
  provider = "postgresql"
  url      = env("POSTGRES_URL")
}

model User {
  id        Int      @id @default(autoincrement())
  createdAt DateTime @default(now())
  updatedAt DateTime @updatedAt

  email              String  @unique()
  password           String
  hashedRefreshToken String? // hash for refresh token

  cities City[]

  @@map("Users")
}

model City {
  name    String // main info
  address String @id @unique() // should be defined to be distinct from cities with same names

  lat Float // coordinates
  lon Float

  users User[]

  @@map("Cities")
}
